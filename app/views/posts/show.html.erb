<h1> <%= @post.title %> </h1>
<p> <%= @post.category.name %> </p>
<p> <%= @post.created_at %> </p>
<p> <%= @post.text %> </p>

<%= link_to 'Back to posts', posts_path, :class => "btn btn-info"%>
<%= link_to "Edit", edit_post_path(@post), :class => "btn btn-info" %>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
<hr>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
<div class="alert alert-light">
  <p><strong><%= comment.username %></strong>: <%= comment.body %></p>
</div>
<% end %>
<hr>

<h2>Add comment</h2>

<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
  User
  <br>
  <%= f.text_field(:username , {:class => 'form-control'}) %>
</p>
<p>
  Text
  <br>
  <%= f.text_area(:body , {:class => 'form-control'}) %>
</p>
<p>
  <%= f.submit("Add comment", {:class => 'btn btn-info'}) %>
</p>
<% end %>
